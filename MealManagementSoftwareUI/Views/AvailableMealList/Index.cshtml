@model IEnumerable<MealManagementSoftwareDataLayer.DishAvailability>

@{
    ViewData["Title"] = "Index";
}

<h1>Meal availability list</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div id="style-7" class="scrollbar">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AvailabilityDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MealMenu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailabilityDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MealMenu.MealName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <div class="text-center">
        <a id="CancelBtn" class="btn btn-default" href="/home">Back to Home</a>
    </div>
